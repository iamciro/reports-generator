#:include assets/kv/components/header.kv
#:import txt assets.utils.texts 

<HomeScreen>:
	name: 'home_screen'
	BoxLayout:
		orientation: 'vertical'
		Header:
			id: toolbar
			orientation: "vertical"
			title: txt.header['title']
			anchor_title: 'center'
			size_hint_y: .2
			md_bg_color: txt.HEADER_BG_COLOR
		FloatLayout:
			orientation: 'vertical'
			MDLabel:
				text: txt.home_screen['welcome_text']
				font_style: 'H2'
				halign: 'center'
				pos_hint: {"x": 0, "center_y": .8}
			MDRaisedButton:
				text:txt.home_screen['reportscreen_btn_text']
				halign: 'center'
				size_hint: .3, .2
				pos_hint: {"center_x": .5, "center_y": .5}
				font_size: 30
				md_bg_color: txt.BUTTON_BG_COLOR
				on_release:
					root.manager.transition.direction = 'left'   
					root.manager.current = "report_screen"

<ReportScreen>:
	name: 'report_screen'
	id: report_screen
	BoxLayout:
		orientation: 'vertical'
		HeaderWithIcon:
			id: toolbar
			title: txt.header['title']
			anchor_title: 'center'
			size_hint_y: .2
			md_bg_color: txt.HEADER_BG_COLOR
			screen: root
		BoxLayout:
			size_hint: .8, .3
			pos_hint: {"center_x": .5, "center_y": .5}
			#canvas:
				#Color:
					#rgba: 1, 0, 1, 1
				#Rectangle:
					#id: rect
					#pos: self.pos
					#size: self.size
			GridLayout:
				cols: 2
				size_hint: 1,1
				MDLabel:
					text: "Orden de servicio: " + root.service_order_number
					halign: 'center'
					font_style: 'H6'
				MDLabel:
					text: "Fecha de orden: " + root.service_date
					halign: 'center'
					font_style: 'H6'
		#Client info
		BoxLayout:
			size_hint: .8, .4
			pos_hint: {"center_x": .5, "center_y": .5}
			#canvas:
				#Color:
					#rgba: 1, 0, 1, 1
				#Rectangle:
					#id: rect
					#pos: self.pos
					#size: self.size
			GridLayout:
				cols: 2
				size_hint: 1,1
				spacing: 20
				padding: 30
				BoxLayout:
					orientation: 'vertical'
					spacing: 8
					MDLabel:
						bold: True
						text: "Nombre del cliente:"
						font_size: 21
					MDTextField:
						hint_text: ""
						font_size: 25
				BoxLayout:
					orientation: 'vertical'
					MDLabel:
						bold: True
						text: "Tel√©fono:"
						font_size: 21
					MDTextField:
						hint_text: ""
						font_size: 25

		# Dispositive info
		BoxLayout:
			size_hint: 1, .4
			pos_hint: {"center_x": .5, "center_y": .1}
			spacing: 8
			#canvas:
				#Color:
					#rgba: 1, 1, 0, 1
				#Rectangle:
					#id: rect
					#pos: self.pos
					#size: self.size
			GridLayout:
				cols: 3
				size_hint: 1,1
				spacing: 10
				padding: 50
				BoxLayout:
					orientation: 'vertical'
					MDLabel:
						bold: True
						text: "Dispositivo:"
						font_size: 21
					MDTextField:
						hint_text: ""
						font_size: 25
				BoxLayout:
					orientation: 'vertical'
					MDLabel:
						bold: True
						text: "Marca:"
						font_size: 21
					MDTextField:
						hint_text: ""
						font_size: 25
				BoxLayout:
					orientation: 'vertical'
					MDLabel:
						bold: True
						text: "Modelo:"
						font_size: 21
					MDTextField:
						hint_text: ""
						font_size: 25

		BoxLayout:
			size_hint: .8, .4
			pos_hint: {"center_x": .5, "center_y": .5}
			#canvas:
				#Color:
					#rgba: 1, 0, 1, 1
				#Rectangle:
					#id: rect
					#pos: self.pos
					#size: self.size
			GridLayout:
				cols: 2
				size_hint: 1,1
				pos_hint: {"center_x": .5, "y": 0}
				BoxLayout:
					orientation: 'vertical'
					spacing: 30
					MDLabel:
						bold: True
						text: "Problema reportado:"
						font_size: 21
						halign: 'center'
					BoxLayout:
						id: box_layout
						#canvas:
							#Color:
								#rgba: 0, 1, 1, 1
							#Rectangle:
								#id: rect
								#pos: self.pos
								#size: self.size
						pos_hint: {"center_x": .5}
						size_hint_x: .7
						size_hint_y: None
						TextInput:
							padding: 10
							font_size: 25
							size_hint: 1,None
							height: 100
		BoxLayout:
			size_hint: 1,.5
			
ScreenManager:
	HomeScreen
	ReportScreen
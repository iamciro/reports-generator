#:include assets/kv/components/header.kv
#:import txt assets.utils.texts 

<HomeScreen>:
	name: 'home_screen'
	BoxLayout:
		orientation: 'vertical'
		Header:
			id: toolbar
			orientation: "vertical"
			title: txt.header['title']
			anchor_title: 'center'
			size_hint_y: .2
			md_bg_color: txt.HEADER_BG_COLOR
		FloatLayout:
			orientation: 'vertical'
			MDLabel:
				text: txt.home_screen['welcome_text']
				font_style: 'H2'
				halign: 'center'
				pos_hint: {"x": 0, "center_y": .8}
			MDRaisedButton:
				text:txt.home_screen['reportscreen_btn_text']
				halign: 'center'
				size_hint: .3, .2
				pos_hint: {"center_x": .5, "center_y": .5}
				font_size: 30
				md_bg_color: txt.BUTTON_BG_COLOR
				on_release:
					root.manager.transition.direction = 'left'   
					root.manager.current = "report_screen"

<ReportScreen>:
	name: 'report_screen'
	BoxLayout:
		orientation: 'vertical'
		Header:
			id: toolbar
			orientation: "vertical"
			title: txt.header['title']
			anchor_title: 'center'
			size_hint_y: .2
			md_bg_color: txt.HEADER_BG_COLOR
			
ScreenManager:
	HomeScreen
	ReportScreen